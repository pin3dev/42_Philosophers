RED=\033[0;31m
GREEN=\033[0;32m
RESET=\033[0m
BKGRAY=\033[47;90m
BKGRAYGREEN=\033[1;92m
BKGRAYRED=\033[1;91m

################################################################################
# 									Executable	 	 						   #
################################################################################

NAME = philo

################################################################################
# 							Dir	Path	Variables 							   #
################################################################################

SRCDIR = src
INCDIR = inc
OBJDIR = obj

################################################################################
# 						Compiler and Flags	Variables						   #
################################################################################

CC = cc
CFLAGS = -Wall -Wextra -Werror -g -I $(INCDIR) -pthread
RM = rm -f
RMD = rm -rf

################################################################################
# 							Files	Path	Variables 						   #
################################################################################

SRC = philo.c init.c rotine.c monitoring.c exit.c utils.c
OBJ = $(SRC:.c=.o)

SRC_PATH = $(addprefix $(SRCDIR)/, $(SRC))
OBJ_PATH = $(addprefix $(OBJDIR)/, $(OBJ))

################################################################################
# 							Manual	Targets		 							   #
################################################################################

all: $(NAME)

clean:
	@if [ -d "$(OBJDIR)" ]; then $(RMD) $(OBJDIR); fi
	@echo "${BKGRAY}Philosophers:${BKGRAYRED}- Obj${RESET}"

fclean: clean
	@$(RM) $(NAME)
	@echo "${BKGRAY}Philosophers: ${BKGRAYRED}- Exec${RESET}"

re: fclean all

################################################################################
# 						Auto Targets 				 						   #
################################################################################

$(OBJDIR):
	@mkdir -p $(OBJDIR)

$(OBJDIR)/%.o: $(SRCDIR)/%.c | $(OBJDIR)
	@$(CC) $(CFLAGS) -c $< -o $@

$(NAME): $(OBJ_PATH)
	@$(CC) $(CFLAGS) $(OBJ_PATH) -o $(NAME) & \
	./gui_load.sh "Philosophers"
	@wait

################################################################################
# 										PS		 	 						   #
################################################################################

.PHONY: all clean fclean re